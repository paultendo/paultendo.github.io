---
import Base from "./Base.astro";
import TableOfContents from "../components/TableOfContents.astro";
import { getReadingTime, formatReadingTime } from "../utils/readingTime";

interface Props {
  frontmatter: {
    title: string;
    deck?: string;
    description: string;
    date: string;
    tags?: string[];
    ogImage?: string;
  };
  rawContent: () => string;
  headings: { depth: number; slug: string; text: string }[];
}

const { frontmatter, rawContent, headings } = Astro.props;

const formattedDate = new Date(frontmatter.date).toLocaleDateString("en-GB", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const readingTime = getReadingTime(rawContent());
---

<Base title={frontmatter.title} description={frontmatter.description} ogImage={frontmatter.ogImage}>
  <article class="shell post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={frontmatter.date} class="post-date mono">{formattedDate}</time>
        <span class="post-reading-time mono">{formatReadingTime(readingTime)}</span>
      </div>
      <h1 class="display-type">{frontmatter.title}</h1>
      {frontmatter.deck && (
        <p class="post-deck">{frontmatter.deck}</p>
      )}
      {frontmatter.tags && (
        <div class="post-tags">
          {frontmatter.tags.map((tag: string) => (
            <span class="tag mono">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="prose">
      <TableOfContents headings={headings} />
      <slot />
    </div>
  </article>
</Base>

<style>
  .post {
    padding-top: clamp(2rem, 6vh, 4rem);
  }
  .post-header {
    max-width: 68ch;
    margin-inline: auto;
    margin-bottom: 2.5rem;
  }
  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }
  .post-date {
    font-size: 0.82rem;
    color: var(--ink-muted);
  }
  .post-reading-time {
    font-size: 0.82rem;
    color: var(--ink-muted);
  }
  .post-header h1 {
    font-size: clamp(2rem, 4.5vw, 3rem);
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }
  .post-deck {
    font-size: clamp(1.1rem, 2.2vw, 1.35rem);
    font-weight: 400;
    line-height: 1.4;
    color: var(--ink-muted);
    margin-top: 0.75rem;
    margin-bottom: 0;
    font-style: italic;
  }
  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 1rem;
  }
  .tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.6rem;
    border-radius: 2rem;
    border: 1px solid var(--line);
    color: var(--ink-muted);
    background: rgba(255,255,255,0.03);
  }
</style>
